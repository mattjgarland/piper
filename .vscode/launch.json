    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/index.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Foo",
            "program": "${workspaceRoot}/foo.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Scratch",
            "program": "${workspaceRoot}/foo.js",
            "cwd": "${workspaceRoot}"
        }, 
        {     
			"name": "Run mocha",
            "type": "node",
            "request": "launch",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"stopOnEntry": false,
			"args": ["test/index.js"],
			"cwd": "${workspaceFolder}",
            "runtimeExecutable": null
		}
    ]
}